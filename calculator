    .calculator {
      display: inline-block;
      border: 2px solid #ccc;
      border-radius: 10px;
      padding: 20px;
      width: 300px;
    }
    .calculator input[type="text"] {
      width: 100%;
      height: 40px;
      font-size: 18px;
      margin-bottom: 20px;
      text-align: right;
    }
    .calculator button {
      width: 23%;
      height: 40px;
      margin: 1%;
      font-size: 18px;
      cursor: pointer;
    }
